    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            /* Ensures padding and border are included in the element's total width and height */
        }

        div .text {
            text-align: center;
            font-size: 24px;
            margin-bottom: 20px;
        }

        body {
            background-image: url(assets/img/img.webp);
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: cover;
            font-family: Georgia, serif;
        }

        .container {
            position: absolute;
            left: 50%;
            top: 50%;
            transform: translate(-50%, -50%);
            background-color: #F8F8FF;
            width: 90%;
            /* Adjusted width for responsiveness */
            max-width: 400px;
            /* Maximum width for larger screens */
            padding: 30px;
            box-shadow: 0 10px 20px -10px rgba(9, 143, 196, 0.5);
            border-radius: 5px;
        }

        .logo {
            margin-left: 70px;
            margin-bottom: 10px;
            /* Added margin for spacing */
        }

        .welcome {
            text-align: center;
            margin: 10px 0;
            /* Adjusted margin */
            color: silver;
        }

        .container form .data {
            margin: 20px 0;
            /* Adjusted margin */
        }

        form .data label {
            font-size: 18px;
        }

        form .data input {
            width: 100%;
            height: 40px;
            /* Adjusted height */
            padding: 5px 10px;
            /* Adjusted padding */
            font-size: 16px;
            border: 1px solid silver;
        }

        form .forgotpassword a {
            color: black;
            text-decoration: none;
            margin-left: 90px;
            box-shadow: #5E5DF0 0 10px 20px -10px;

        }

        form .forgotpassword a:hover {
            text-decoration: underline;
        }

        form .btn {
            margin-top: 20px;
            /* Adjusted margin */
        }

        form .btn button {
            height: 40px;
            /* Adjusted height */
            width: 100%;
            border: none;
            cursor: pointer;
            background-color: #5E5DF0;
            color: #FFFFFF;
            font-size: 16px;
            border-radius: 5px;
        }

        form .signup {
            margin-top: 20px;
            /* Adjusted margin */
            text-align: center;
            /* Centering the text */
        }

        form .signup a {
            color: #070707;
            text-decoration: none;
        }

        form .signup a:hover {
            text-decoration: underline;

        }
    </style>
</head>

<body>
    <div class="container">
        <div><img class="logo" src="assets/img/logo.svg" alt=""></div>
        <div class="text">Login form</div>
        <h4 class="welcome">Welcome back please enter your details</h4>

        <form action="#" method="POST">
            <div class="data">
                <label for="email"> Email</label>
                <input type="email" name="email">
            </div>
            <div class="data">
                <label for="password"> Password</label>
                <input type="password" name="password">
            </div>
            <div class="forgotpassword">
                <input type="checkbox">Remember me
            </div>
            <div class="btn">
                <button type="submit" onclick="click()">Login</button>
            </div>

            <script>
                function click() {
                    swal("You are logged in");
                }
            </script>
            <br>
            <div class="signup">
                <a href="/signup">Sign Up</a>
                <br>
                <br>
                <a href="http://localhost:7140/resetpassword">Forget Password</a>
            </div>


        </form>
    </div>
    <div>

    </div>
